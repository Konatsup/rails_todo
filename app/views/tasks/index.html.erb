<div>
  <div>
    <%= form_tag("/tasks/create", {method: "post"}) do %>
      <input name="title" value="" placeholder="Todo名">
      <input type="submit" value="追加">
    <% end %>
  </div>
  <div>
    <% @tasks.each do |task| %>
      <div class="todo">
        <%= task.title %>
        <%= link_to("削除", "/tasks/#{task.id}/destroy", {method: "delete"}) %>
      </div>
    <% end %>
  </div>
</div>